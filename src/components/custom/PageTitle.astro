---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div>
  <h2>{title}</h2>
</div>

<style>
  div {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  h2 {
    font-size: 2.6rem;
    border-bottom: 0.3rem solid var(--blue-light);
    display: inline-block;
    margin-bottom: 1rem;
  }
  @media (min-width: 48em) {
    div {
      justify-content: flex-start;
    }
  }
</style>
