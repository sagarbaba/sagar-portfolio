---
export interface Props {
  imgSrc: string;
  year: string;
  title: string;
  desc: string;
  href: string;
}
const { href, imgSrc, year, title, desc } = Astro.props;
---

<a href={href} target="_blank" rel="noreferrer" class="card">
  <div class="card-img-container">
    <img src={imgSrc} alt={title} height="60" width="60" loading="lazy" />
  </div>
  <div class="body">
    <p class="year">{year}</p>
    <p class="title">{title}</p>
    <p class="desc">{desc}</p>
  </div>
</a>

<style>
  .card {
    background-color: var(--primary-light);
    border-radius: 0.5rem;
    padding: 1.4rem 1rem;
    text-align: center;
    transition-property: transform;
    transition-duration: 150ms;
    transition-timing-function: ease-in;
  }

  .card-img-container {
    height: 7rem;
    width: 7rem;
    margin-inline: auto;
  }

  .card-img-container img {
    height: auto;
    width: 100%;
    aspect-ratio: 1;
  }

  .card .body {
    margin-top: 1.4rem;
  }

  .year {
    font-size: 1.4rem;
    color: var(--secondary);
    font-weight: 400;
    letter-spacing: 0.06rem;
  }

  .title {
    font-size: 2.2rem;
    font-weight: 500;
    letter-spacing: 0.06rem;
    line-height: 1.6;
  }

  .desc {
    font-size: 1.6rem;
    font-weight: 300;
    letter-spacing: 0.06rem;
    line-height: 1.6;
  }

  @media (min-width: 48em) {
    .card:hover {
      transform: translateY(-1rem);
    }
  }
</style>
