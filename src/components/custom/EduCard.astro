---
export interface Props {
  imgSrc: string;
  alt: string;
  title: string;
  subtitle: string;
  smallTxt: string;
  lightTxt: string;
}
const { imgSrc, alt, title, subtitle, smallTxt, lightTxt } = Astro.props;
---

<div class="card-container">
  <div class="left-col">
    <div class="img-container">
      <img src={imgSrc} alt={alt} height="200" width="200" loading="lazy" />
    </div>
  </div>
  <div class="right-col">
    <p class="light-txt">{lightTxt}</p>
    <h3 class="title">{title}</h3>
    <p class="subtitle">{subtitle}</p>
    <p class="small-text">{smallTxt}</p>
  </div>
</div>

<style>
  .card-container {
    display: flex;
    margin-top: 4%;
    background-color: var(--primary-light);
    border-radius: 0.5rem;
    padding: 2rem;
    align-items: center;
    gap: 4%;
    flex-direction: column;
  }

  .left-col {
    flex-shrink: 0;
  }

  .img-container {
    height: 15rem;
    width: 100%;
    max-width: 15rem;
  }

  .img-container img {
    height: auto;
    width: 100%;
    aspect-ratio: 1;
  }

  .right-col {
    text-align: center;
  }

  .light-txt {
    font-size: 1.4rem;
    line-height: 2.2;
    color: var(--secondary);
    font-weight: 300;
    letter-spacing: 0.05rem;
  }

  .title {
    font-size: 2rem;
    letter-spacing: 0.1rem;
    line-height: 3rem;
  }
  .subtitle {
    font-size: 1.6rem;
    letter-spacing: 0.05rem;
    line-height: 3rem;
    font-weight: 500;
  }
  .small-text {
    font-size: 1.5rem;
    letter-spacing: 0.05rem;
    line-height: 1.8;
  }

  @media (min-width: 48em) {
    .card-container {
      flex-direction: row;
    }

    .right-col {
      text-align: left;
    }
  }
</style>
